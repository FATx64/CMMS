<div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        
                        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <h3 class="title-5 m-b-35">Department</h3>
                                <div class="table-data__tool">
                                    
                                     <div  class="table-data__tool-right">
                                        <a href="#" data-toggle="modal" data-target="#modalAppointment" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                            <i class="zmdi zmdi-plus"></i>Add Department</a>
                                    </div>
                                </div>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Code</th>
                                                <th>Location</th>
                                                <th>Engineers</th>
                                                <th>Equipment</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                       {{#if hasDepartment }} 
                                        <tbody>
                                           {{#each departments }} 
                                                <tr class="tr-shadow">
                                                    <td>{{ this.Name }}</td>
                                                    <td>
                                                        <span class="block-email">{{ this.Code }}</span>
                                                    </td>
                                                    <td class="desc">{{ this.Location }}</td>
                                                    <td>{{ this.Engineers }}</td>
                                                    <td>{{ this.Equipments }}</td> 
                                                    <td>
                                                        <div class="table-data-feature">
                                                            <a href="/report/department/equipments/{{ this.Code }}" class="item" data-toggle="tooltip" data-placement="top" title="More">
                                                                <i class="zmdi zmdi-more"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr class="spacer"></tr>
                                            {{/each }}
                                        </tbody>
                                       {{/if}} 
                                    </table>
                                </div>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>
                            
                    </div>
                </div>
</div>

<!-- POPUP-->
<div class="modal fade" id="modalAppointment" tabindex="-1" role="dialog" aria-labelledby="modalAppointmentLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
          
          <div class="modal-body">
            <form method="POST" action="/department/add">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
                <div class="login-logo">
                    
                    <img src="images/icon/logo-mini.png" alt="Cool Admin" /> <strong>MMS</strong></a>
                </div>
                <div class="login-form">
                        <div class="form-group">
                            <label class=" form-control-label">Code</label>
                            <input type="text" name="Code" placeholder="Enter Code"  required class="form-control">
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Department</label>
                            <select name="Name"required id="select" class="form-control">
                                    <option value="OR">OR</option>
                                    <option value="Radiology">Radiology</option> 
                                    <option value="ICU">ICU</option>
                                    <option value="CSSD">CSSD</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class=" form-control-label">Location</label>
                            <input type="text" name="Location" placeholder="Enter Location" required class="form-control">
                        </div>
                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">ADD</button>
                </div>
            </form>
          </div>  
        </div>
    </div>
</div>